<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/swipe_item_one"
            android:layout_width="0dp"
            android:layout_height="@dimen/forty"
            android:src="@drawable/ic_action_name"
            android:layout_weight="0.3"/>

        <ImageView
            android:id="@+id/swipe_item_two"
            android:layout_width="0dp"
            android:layout_height="@dimen/forty"
            android:src="@drawable/ic_second_item"
            android:layout_weight="0.3"/>

        <ImageView
            android:id="@+id/swipe_item_three"
            android:layout_width="0dp"
            android:layout_height="@dimen/forty"
            android:src="@drawable/ic_third_item"
            android:layout_weight="0.3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/blueLine"
                android:layout_width="@dimen/ten_dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/blue" />

            <View
                android:id="@+id/orangeLine"
                android:layout_width="@dimen/ten_dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/orange" />

            <View
                android:id="@+id/space"
                android:layout_width="@dimen/ten_dp"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:layout_marginStart="@dimen/twenty"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/forty"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/big_text"
                android:textStyle="bold"
                tool:text="Test Name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/five"
                    android:text="modified" />

                <TextView
                    android:id="@+id/modifiedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tool:text="5 June" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</com.daimajia.swipe.SwipeLayout>